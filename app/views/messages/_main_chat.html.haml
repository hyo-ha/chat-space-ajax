.Chat
  .RightHeader
    .RightHeader__group
      .RightHeader__groupname
        = @group.name
      .RightHeader__memberlist
        Member : 
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group.id), class: "RightHeader__editbutton" do
      Edit
  .MessageField
    = render @messages
      
  .Footer
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__inputcontent', placeholder: 'type a message'
        = f.label :image, class: 'Form__inputimage' do
          = icon('far', 'image')
          = f.file_field :image, class:"Form__file"
      = f.submit 'Send', class: 'Form__submit'